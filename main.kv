#:import Factory kivy.factory.Factory
#:import Screen kivy.uix.screenmanager.Screen

<Week@Button>:
	markup: True
	size: self.parent.size
	size_hint: 1, 1

<Status@Button>
	size_hint_x: None
	width: '150sp'
	height: '20sp'
<Task@Button>
	height: '20sp'
	
<Container>:
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

<ProcrastinateLater>:
    orientation: "vertical"
    
    BoxLayout:
        padding: '3sp'
        spacing: '4sp'
        canvas:
            Color:
                rgba: 1,1,1,.2
            Rectangle:
                pos: self.pos
                size: self.size        
        size_hint: 1, .1
        
		Button:
		    text: 'Categories'
			size_hint: 3, 1
			on_press: sm.current = 'ViewCategoryPage'
		Button:
			Image:
				source: './icons/search.png'
				y: self.parent.y
				x: self.parent.x
				size: self.parent.size
		
		Button:
			Image:
				source: './icons/+.png'
				y: self.parent.y
				x: self.parent.x
				size: self.parent.size
		
		Button:
			Image:
				source: './icons/option.png'
				y: self.parent.y
				x: self.parent.x
				size: self.parent.size
	
	ScreenManager:
		id: sm
			
		# View Category Page
		Screen:
			name: 'ViewCategoryPage'
			canvas:
				Color:
					rgba: 1, 1, 1, .8
				Rectangle:
					size: self.size
				
			BoxLayout:
				orientation: 'vertical'
				padding: '50sp'
				spacing: '15sp'
				
				Button:
					size_hint: 1, None
					size_y: '48dp'
					
					text: 'Go to View Task Page'
					on_press: sm.current = 'ViewTaskPage'
				
				Button:
					size_hint: 1, None
					size_y: '48dp'
					text: 'View Task by Status'
					on_press: sm.current = 'ViewTaskbyStatus'
					
				Button:
					size_hint: 1, None
					size_y: '48dp'
					text: 'View Task by Category'
					on_press: sm.current = 'ViewTaskbyCategory'
        
        # View Task Page
		Screen:
			name: 'ViewTaskPage'
			
			BoxLayout:
				rows: 2
				orientation: 'vertical'
				padding: '3sp'
				spacing: '4sp'
				canvas:
				    Color:
				        rgba: 2,2,2,.3
				    Rectangle:
				        pos: self.pos
				        size: self.size
				
				Carousel:
					id: week
					size_hint: 1, .1
					
					Week:
						text: 'Week1'
						
					Week:
						text: 'Week2'
					
					Week:
						text: 'Week3'
						
				BoxLayout:
					orientation: 'horizontal'
					
					TabbedPanel:
						id: days
						do_default_tab: False
				
						padding: '3sp'
						spacing: '4sp'
					
						TabbedPanelItem:
							id: mon
							text: 'Monday'
						
						TabbedPanelItem:
							id: tue
							text: 'Tuesay'
						
						TabbedPanelItem:
							id: wed
							text: 'Wednesday'
				
						TabbedPanelItem:
							id: thu
							text: 'Thursday'
				
						TabbedPanelItem:
							id: fri
							text: 'Friday'
				
						TabbedPanelItem:
							id: sat
							text: 'Saturday'
				
						TabbedPanelItem:
							id: sun
							text: 'Sunday'
			
		# View Task by Status
		Screen:
			name: 'ViewTaskbyStatus'
			
			BoxLayout:
				rows: 2
				orientation: 'vertical'
				padding: '3sp'
				spacing: '4sp'
				canvas:
				    Color:
				        rgba: 2,2,2,.3
				    Rectangle:
				        pos: self.pos
				        size: self.size
				
				Carousel:
					id: week
					size_hint: 1, .1
					
					Week:
						text: 'COMPLETED'
						
					Week:
						text: 'CANCELED'
					
					Week:
						text: 'POSTPONED'
						
				StackLayout:
					orientation: 'lr-bt'
					padding: '5sp'
					spacing: '10sp'
					canvas:
						Color:
						    rgba: 1,1,1,.2
						Rectangle:
						    pos: self.pos
						    size: self.size			
					
					GridLayout:
						cols: 2
						
						Status:
							text: 'Status'
						Task:
							text: 'Task'
						Status:
							text: 'Status'
						Task:
							text: 'Task'
						Status:
							text: 'Status'
						Task:
							text: 'Task'
						Status:
							text: 'Status'
						Task:
							text: 'Task'

		# View Task by Category
		Screen:
			name: 'ViewTaskbyCategory'
			
			BoxLayout:
				rows: 2
				orientation: 'vertical'
				padding: '3sp'
				spacing: '4sp'
				canvas:
				    Color:
				        rgba: 2,2,2,.3
				    Rectangle:
				        pos: self.pos
				        size: self.size
				
				Carousel:
					id: category
					size_hint: 1, .1
					
					Week:
						text: 'PERSONAL'
						
					Week:
						text: 'SCHOOL'
					
					Week:
						text: 'WORK'
						
				StackLayout:
					orientation: 'lr-bt'
					padding: '5sp'
					spacing: '10sp'
					canvas:
						Color:
						    rgba: 1,1,1,.2
						Rectangle:
						    pos: self.pos
						    size: self.size			
					
					GridLayout:
						cols: 2
						
						Status:
							text: 'Status'
						Task:
							text: 'Task'
						Status:
							text: 'Status'
						Task:
							text: 'Task'
						Status:
							text: 'Status'
						Task:
							text: 'Task'
						Status:
							text: 'Status'
						Task:
							text: 'Task'

